@{
    ViewData["Title"] = "User Details";
}

@model UserDetailsViewModel;

<div class="text-left" 
     asp-controller="User" 
     asp-action="Details" 
     method="get">
    <div>

        <div>
            <h5 class="sessao">User Details</h5>
            <br />

            <div>
                <h6>User</h6>
                <p>username: @Model.Username</p>
                <p>name: @Model.Name @Model.Surname</p>
                <p>email: @Model.Email</p>
                <br />
            </div>

            <div>
                <h6>Address</h6>
                <p>@Model.AddressId</p>
                <br />
            </div>

            <div class="form-group">
                <a class="btn btn-info"
                   asp-action="Index">
                    Back
                </a>

                <a class="btn btn-warning"
                   asp-action="Index"
                   asp-route-id="@Model.Id">
                    Update
                </a>

                <a class="btn btn-danger"
                   asp-action="Delete"
                   asp-route-id="@Model.Id">
                    Delete
                </a>
            </div>
        </div>

    </div>
</div>
