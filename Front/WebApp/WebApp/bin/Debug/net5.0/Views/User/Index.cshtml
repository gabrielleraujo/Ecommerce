@{
    ViewData["Title"] = "Home User";
}

@model UserListViewModel;

<div class="container"
     asp-controller="User"
              asp-action="Index"
              method="get">
    <div>
        <h5 class="sessao">Users</h5>
        <br />
        @{
            <div />
            foreach (var user in @Model.Users)
            {
                <div class="d-sm-inline-flex justify-content-between">
                    <ul class="flex-grow-1">
                        <li>
                            <p style="color: green;">username: @user.Username</p>
                            <p>name: @user.Name @user.Surname</p>
                            <br />

                            <div class="color: black">
                                <a asp-controller="User"
                                   asp-action="Details"
                                   asp-route-id="@user.Id"
                                   class="btn btn-info">
                                    Details
                                </a>
                                <a asp-controller="User"
                                   asp-action="Delete"
                                   asp-route-id="@user.Id"
                                   class="btn btn-danger">
                                    Delete
                                </a>
                            </div>
                            <br />

                        </li>
                    </ul>
                </div>
            }
        }
    </div>
</div>