@{
    ViewData["Title"] = "Product Details";
}

@model ProductDetailsViewModel;

<div class="text-left" 
     asp-controller="Product" 
     asp-action="Details" 
     method="get">
    <div>

        <div>
            <h5 class="sessao">Product Details</h5>
            <br />

            <div>
                <h6>Product</h6>
                <p>Name: @Model.Name</p>
                <p class="preco">Price: @Model.Price</p>

                <h6>Description:</h6>
                <p>@Model.Description</p>
            </div>
            
            <div>
                <h6>Category</h6>
                <p>@Model.CategoryText</p>

                <h6>Color</h6>
                <p>@Model.ColorText</p>

                <h6>Size</h6>
                <p>@Model.SizeText</p>
            </div>

            <div class="form-group">
                <a class="btn btn-info"
                   asp-action="Index">
                    Back
                </a>

                <a class="btn btn-warning"
                   asp-action="Index"
                   asp-route-id="@Model.Id">
                    Update
                </a>

                <a class="btn btn-danger"
                   asp-action="Delete"
                   asp-route-id="@Model.Id">
                    Delete
                </a>
            </div>
        </div>

    </div>
</div>