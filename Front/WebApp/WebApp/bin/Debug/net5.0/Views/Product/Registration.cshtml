@{ ViewData["Title"] = "Product Registration"; }

@model ProductRegistrationViewModel;


<h5 class="sessao">Register a Product</h5>
<div>
    <div>

        <form asp-controller="Product" 
              asp-action="Registration" 
              class="form-row" 
              method="post">

            <div class="form-group col-md-6">
                <label class="control-label" for="Name">Product's name</label>
                <input type="text" class="form-control" placeholder="Product's name"
                       asp-for="@Model.Name">
                <span asp-validation-for="@Model.Name" class="text-validation"></span>
            </div>

            <div class="form-group col-md-6">
                <label class="control-label" for="Price">Price R$</label>
                <input type="number" step="0.01" class="form-control" placeholder="Price R$"
                       asp-for="@Model.Price">
                <span asp-validation-for="@Model.Price" class="text-validation"></span>
            </div>
            <div class="w-100"></div>

            <div class="form-group col-md-12">
                <label class="control-label" for="Description">Description</label>
                <input type="text" class="form-control" placeholder="Description"
                       asp-for="@Model.Description">
                <span asp-validation-for="@Model.Description" class="text-validation"></span>
            </div>
            <div class="w-100"></div>

            <div class="form-group col-md-4">
                <label class="control-label" for="CategoryId">Category</label>
                <select class="form-control single-select" name="CategoryId" asp-for="@Model.CategoryId">
                    <option selected value="">[Select the category]</option>
                    @foreach (var category in Model.Categories)
                    {
                        <option value=@category.Id>@category.CategoryText</option>
                    }
                </select>
                <span asp-validation-for="@Model.CategoryId" class="text-validation"></span>
            </div>

            <div class="form-group col-md-4">
                <label class="control-label" for="ColorId">Color</label>
                <select class="form-control single-select" name="ColorId" asp-for="@Model.ColorId">
                    <option selected value="">[Select the color]</option>
                    @foreach (var color in Model.Colors)
                    {
                        <option value=@color.Id>@color.ColorText</option>
                    }
                </select>
                <span asp-validation-for="@Model.ColorId" class="text-validation"></span>
            </div>

            <div class="form-group col-md-4">
                <label class="control-label" for="SizeId">Size</label>
                <select class="form-control single-select" name="SizeId" asp-for="@Model.SizeId">
                    <option selected value="">[Select the size]</option>
                    @foreach (var size in Model.Sizes)
                    {
                        <option value=@size.Id>@size.SizeText</option>
                    }
                </select>
                <span asp-validation-for="@Model.SizeId" class="text-validation"></span>
            </div>

            <div class="w-100"></div>

            <div class="form-group">
                <a class="btn btn-warning" asp-action="Index">
                    Back
                </a>

                <button type="submit"
                        class="btn btn-success">
                    Finish
                </button>
            </div>
        </form>
    </div>
</div>